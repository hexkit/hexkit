{
  "name": "root",
  "devDependencies": {
    "@changesets/cli": "2.29.8",
    "@commitlint/cli": "20.4.0",
    "@commitlint/config-conventional": "20.4.0",
    "@commitlint/prompt-cli": "20.4.0",
    "@hexkit/changelog-generator": "workspace:*",
    "@hexkit/foundation-scripts": "workspace:*",
    "husky": "9.1.7",
    "knip": "5.82.1",
    "lint-staged": "16.2.7",
    "turbo": "2.8.2"
  },
  "scripts": {
    "build": "turbo run build",
    "commit": "commit",
    "format": "turbo run format",
    "lint": "turbo run lint",
    "prepare": "husky && turbo telemetry disable",
    "prerelease": "pnpm run build",
    "release": "changeset publish",
    "test:integration": "turbo test:integration",
    "test": "turbo run test",
    "test:coverage": "turbo run test:coverage",
    "test:mutation": "turbo run test:mutation",
    "test:uncommitted": "turbo run test:uncommitted --filter [HEAD]",
    "test:unit": "turbo run test:unit",
    "unused": "knip"
  },
  "license": "MIT",
  "packageManager": "pnpm@10.28.2",
  "private": true
}
